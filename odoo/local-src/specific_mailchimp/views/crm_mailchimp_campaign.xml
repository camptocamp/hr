<?xml version="1.0"?>
<odoo>

    <record id="view_crm_mailchimp_campaign_form" model="ir.ui.view">
        <field name="name">crm.mailchimp.campaign.form</field>
        <field name="model">crm.mailchimp.campaign</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="mailing_ids"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_crm_mailchimp_campaign_tree" model="ir.ui.view">
        <field name="name">crm.mailchimp.campaign.tree</field>
        <field name="model">crm.mailchimp.campaign</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mailing_ids"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="view_crm_mailchimp_campaign_search_specific_mailchimp" model="ir.ui.view">
        <field name="name">crm.mailchimp.campaign.search.specific_mailchimp</field>
        <field name="model">crm.mailchimp.campaign</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id"/>
                <group expand="1" string="Group By">
                    <filter string="Company" name="company_id" domain="[]" context="{'group_by': 'company_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="crm_mailchimp_campaign_action_specific" model="ir.actions.act_window">
        <field name="name">Campaign</field>
        <field name="res_model">crm.mailchimp.campaign</field>
        <field name="search_view" ref="specific_mailchimp.view_crm_mailchimp_campaign_search_specific_mailchimp"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem
        id="crm_mailchimp_campaign_menu"
        string="Campaign"
        parent="specific_crm.sales_marketing_menu"
        action="crm_mailchimp_campaign_action_specific"
        sequence="1"/>
</odoo>
