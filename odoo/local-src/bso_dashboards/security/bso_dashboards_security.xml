<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_bso_dashboards">
        <field name="name">BSO Dashboards</field>
    </record>

    <record id="group_dashboard_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_bso_dashboards"/>
    </record>

    <record id="group_dashboard_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_bso_dashboards"/>
        <field name="implied_ids"
               eval="[(4, ref('bso_dashboards.group_dashboard_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="display_only_dashboard_associated_to_user" model="ir.rule">
        <field name="name">dashboard display rule</field>
        <field name="model_id" ref="model_bso_dashboard"/>
        <field name="domain_force">[('group_id','in', user.groups_id.ids)]</field>
    </record>

</odoo>
