<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="crm_case_form_view_oppor_roctool" model="ir.ui.view">
        <field name="name">crm.lead.form.opportunity</field>
        <field name="model">crm.lead</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
              <field name="program_manager_id"/>
            </field>
            <xpath expr="//group[field[@name='priority']]" position="after">
                <group name="project_name_computation" >
                    <field name="project_zone_id"/>
                    <field name="project_process_id"/>
                    <field name="project_market_id"/>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="NDA" name="nda">
                    <group>
                        <field name="domain"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </page>
                <page string="Feasibility Timesheet Project" name="feasibility">
                    <group>
                        <field name="project_id"/>
                        <field name="survey_id"/>
                        <field name="survey_input_lines" invisible="True"/>
                        <field name="survey_inputs"/>
                        <field name="survey_input_count"/>
                    </group>
                    <group>
                        <button type="object" name="answer_selected_survey" string="Answer Survey" class="oe_highlight"
                                attrs="{'invisible': [('survey_id', '=', False)]}"/>
                        <button type="object" name="action_result_selected_survey" string="Print Results" class="oe_highlight"
                                attrs="{'invisible': [('survey_id', '=', False)]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_crm_case_leads_filter" model="ir.ui.view">
        <field name="name">crm.lead.search.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch" type="xml">
          <filter name="assigned_to_me" position="attributes">
            <attribute name="domain">['|', ('user_id', '=', uid), ('program_manager_id', '=', uid)]</attribute>
          </filter>

        </field>
    </record>
</odoo>
