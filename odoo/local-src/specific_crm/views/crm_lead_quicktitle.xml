<?xml version="1.0"?>
<odoo>

    <record id="view_crm_lead_quicktitle_tree" model="ir.ui.view">
        <field name="name">crm.lead.quicktitle.tree</field>
        <field name="model">crm.lead.quicktitle</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_crm_lead_quicktitle_search" model="ir.ui.view">
        <field name="name">crm.lead.quicktitle.search</field>
        <field name="model">crm.lead.quicktitle</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_window_crm_lead_quicktitle" model="ir.actions.act_window">
        <field name="name">Lead Quicktitle</field>
        <field name="res_model">crm.lead.quicktitle</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="specific_crm.view_crm_lead_quicktitle_search"/>
    </record>

    <menuitem
        name="Lead Quicktitle"
        parent="menu_crm_marketing"
        action="action_window_crm_lead_quicktitle"
        id="menu_crm_lead_quicktitle"
        sequence="3"/>

</odoo>
