<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_partner_form_roctool_nda" model="ir.ui.view">
    <field name="name">res.partner.form.roctool.nda</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">

        <xpath expr="//notebook" position="inside">
          <page string="NDA" name="nda">
            <group>
              <field name="opp_nda_ids">
                <tree>
                  <field name="name"/>
                  <field name="domain"/>
                  <field name="start_date"/>
                  <field name="end_date"/>
                </tree>
              </field>
            </group>
          </page>
          <page string="Licenses" name="licenses">
              <field name="customer_license_ids">
                <tree>
                  <field name="partner_id" invisible="True"/>
                  <field name="license_type"/>
                  <field name="start_date"/>
                  <field name="end_date"/>
                  <field name="area"/>
                  <field name="domain"/>
                  <field name="license_comment"/>
                </tree>
              </field>
          </page>
        </xpath>

      </field>
    </record>

</odoo>
