<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_attachments_all" model="ir.rule">
        <field name="name">Employee's Attachments for All</field>
        <field name="model_id" ref="base.model_ir_attachment"/>
        <field name="global" eval="True"/>
        <field name="groups"
               eval="[(4,ref('base.group_user')),(4,ref('hr.group_hr_user'))]"/>
        <field name="domain_force">[('res_model', '!=', 'hr.employee')]</field>
    </record>

    <record id="employee_attachments_hr_manager" model="ir.rule">
        <field name="name">Employee's Attachments for HR Manager</field>
        <field name="model_id" ref="base.model_ir_attachment"/>
        <field name="global" eval="True"/>
        <field name="groups" eval="[(4,ref('hr.group_hr_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
