        <field name="name">Cease Created</field>
        <field name="res_model">cease.order</field>
        <field name="default" eval="False"/>
    </record>
    <record id="mt_company_new_cease" model="mail.message.subtype">
        <field name="name">Cease Created</field>
        <field name="res_model">res.company</field>
        <field name="default" eval="False"/>
