<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="add_bundle_to_product_template" model="ir.ui.view">
        <field name="name">product.template.add_bundle</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']/div[@name='options']"
                   position="inside">
                <div>
                    <field name="is_bundle"/>
                    <label for="is_bundle"/>
                </div>
            </xpath>

            <notebook position='inside'>
                <page string="Bundle NRC" name="bundle_nrc"
                      attrs="{'invisible':[('is_bundle','=', False)]}">
                    <h1>TODO</h1>
                </page>
                <page string="Bundle Products" name="bundle_products"
                      attrs="{'invisible':['|', ('is_bundle', '=', False), ('is_epl', '=', True)]}">
                    <field name="products">
                        <tree editable="bottom">
                            <field name="product_id"
                                   domain="[('categ_id', 'child_of', parent.categ_id), ('is_bundle', '=', False)]"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                        </tree>
                    </field>
                </page>
                <page string="Bundle Products" name="no_bundle_products"
                      attrs="{'invisible':['|', ('is_bundle','=', False), ('is_epl', '=', False)]}">
                    <h1>Must be edited from Network's Bundle Products</h1>
                </page>
                <page string="Bundle Templates" name="bundle_templates"
                      attrs="{'invisible':['|', ('is_bundle', '=', False), ('is_epl', '=', True)]}">
                    <h1>TODO</h1>
                </page>
                <page string="Bundle Templates" name="no_bundle_templates"
                      attrs="{'invisible':['|', ('is_bundle','=', False), ('is_epl', '=', False)]}">
                    <h1>Must be edited from Network's Bundle Templates</h1>
                </page>
            </notebook>
        </field>
    </record>

    <record id="disable_variants_if_bundle" model="ir.ui.view">
        <field name="name">product.template.disable_variants</field>
        <field name="model">product.template</field>
        <field name="inherit_id"
               ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='variants']"
                   position="attributes">
                <attribute name="attrs">{'invisible':[('is_bundle', '=', True)]}
                </attribute>
            </xpath>

            <xpath expr="//notebook/page[@name='variants']"
                   position="after">
                <page string="Variants" name="no_variants"
                      attrs="{'invisible':[('is_bundle','=', False)]}">
                    <h1>You cannot create variants of the Bundle</h1>
                </page>
            </xpath>
        </field>
    </record>

    <record id="add_bundle_search_filter" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id"
               ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search/filter[@name='filter_to_sell']"
                   position="after">
                <filter string="Is a bundle" name="is_a_bundle"
                        domain="[('is_bundle', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <record id="bundle_menu_item" model="ir.actions.act_window">
        <field name="name">Product Bundles</field>
        <field name="res_model">product.template</field>
        <field name="domain">[('is_bundle', '=', True)]</field>
        <field name="context">{'default_is_bundle':True}</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="add_bundle_menu_item" name="Product Bundles"
              parent="sales_team.menu_sales" sequence="15"
              action="bundle_menu_item"/>

</odoo>
