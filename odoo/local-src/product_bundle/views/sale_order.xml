<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="add_bundle_to_sale_order" model="ir.ui.view">
        <field name="name">sale.order.add_bundle</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='order_line']"
                   position="before">
                <button name="product_bundle.bundle_details_create"
                        string="Add Cloud" type="action"
                        context="{'default_sale_order_id': id, 'default_bundle_name': 'Cloud'}"/>
                <button name="product_bundle.bundle_details_create"
                        string="Add EPL" type="action"
                        context="{'default_sale_order_id': id, 'default_bundle_name': 'EPL'}"/>
                <button name="product_bundle.bundle_details_create"
                        string="Add Network" type="action"
                        context="{'default_sale_order_id': id, 'default_bundle_name': 'Network'}"/>
                <button name="product_bundle.bundle_details_create"
                        string="Add Hosting" type="action"
                        context="{'default_sale_order_id': id, 'default_bundle_name': 'Hosting'}"/>
                <button name="product_bundle.bundle_details_create"
                        string="Add Service Desk" type="action"
                        context="{'default_sale_order_id': id, 'default_bundle_name': 'Service Desk'}"/>
            </xpath>
        </field>
    </record>

</odoo>