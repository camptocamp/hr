<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_bundle_form_view" model="ir.ui.view">
        <field name="name">product.product.bundle</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']/div[@name='options']"
                   position="inside">
                <div>
                    <field name="is_bundle"/>
                    <label for="is_bundle"/>
                </div>
            </xpath>
            <notebook position='inside'>
                <page string='Bundle Products'
                      attrs="{'invisible':[('is_bundle','=', False)]}">
                    <field name="default_products">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="uom_id"/>
                        </tree>
                    </field>
                </page>
            </notebook>

        </field>
    </record>

    <record id="product_bundle_inherit_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='order_line']"
                   position="before">
                <button name="product_bundle.bundle_wizard_action"
                        string="Add Cloud" type="action"
                        context="{'default_bundle_name': 'Cloud'}"/>
                <button name="product_bundle.bundle_wizard_action"
                        string="Add Network" type="action"
                        context="{'default_bundle_name': 'Network'}"/>
                <button name="product_bundle.bundle_wizard_action"
                        string="Add Hosting" type="action"
                        context="{'default_bundle_name': 'Hosting'}"/>
                <button name="product_bundle.bundle_wizard_action"
                        string="Add Service Desk" type="action"
                        context="{'default_bundle_name': 'Service Desk'}"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_inherit_form" model="ir.ui.view">
        <field name="name">product.product.bundle</field>
        <field name="model">product.template</field>
        <field name="inherit_id"
               ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='variants']"
                   position="attributes">
                <attribute name="attrs">{'invisible':[('is_bundle','=',
                    True)]}
                </attribute>
            </xpath>

            <xpath expr="//notebook/page[@name='variants']"
                   position="after">
                <page string="Variants" name="bi_variants"
                      attrs="{'invisible':[('is_bundle','=', False)]}">
                    <h1>You cannot create variants of the Bundle</h1>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_bundle_search_view" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id"
               ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search/filter[@name='filter_to_sell']"
                   position="after">
                <filter string="Is a bundle" name="is_a_bundle"
                        domain="[('is_bundle','=',1)]"/>
            </xpath>
        </field>
    </record>

    <record id="product_bundle_action" model="ir.actions.act_window">
        <field name="name">Product Bundles</field>
        <field name="res_model">product.template</field>
        <field name="domain">[('is_bundle', '=', True)]</field>
        <field name="context">{'default_is_bundle':True}</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="product_bundle_menu" name="Product Bundles"
              parent="sales_team.menu_sales" sequence="15"
              action="product_bundle_action"/>

</odoo>
