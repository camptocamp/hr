<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bundle_details_form" model="ir.ui.view">
        <field name="name">bundle.details.form</field>
        <field name="model">bundle.details</field>
        <field name="arch" type="xml">
            <form string="Product Bundle">
                <!--SETUP VARIABLE-->
                <field name="sale_order_id" invisible="1"/>
                <field name="sale_order_currency_id" invisible="1"/>
                <field name="bundle_id" invisible="1"/>
                <field name="bundle_categ_id" invisible="1"/>
                <!--BUNDLE LAYOUT-->
                <field name="show_bundle" invisible="1"/>
                <div attrs="{'invisible': [('show_bundle', '=', False)]}">
                    <group>
                        <field name="bundle_products"
                               context="{'default_bundle_categ_id': bundle_categ_id}"/>
                        <field name="bundle_price_per_unit"
                               widget="monetary"
                               options="{'currency_field': 'sale_order_currency_id'}"
                               invisible="1"/>
                        <field name="bundle_cost_per_unit"
                               widget="monetary"
                               options="{'currency_field': 'sale_order_currency_id'}"
                               invisible="1"/>
                    </group>
                    <group>
                        <field name="bundle_quantity"
                               attrs="{'required': [('show_bundle', '=', True)]}"/>
                        <field name="bundle_name"
                               attrs="{'required': [('show_bundle', '=', True)]}"/>
                        <field name="bundle_discount"/>
                        <field name="bundle_price" widget="monetary"
                               options="{'currency_field': 'sale_order_currency_id'}"/>
                        <field name="bundle_cost" widget="monetary"
                               options="{'currency_field': 'sale_order_currency_id'}"
                               invisible="1"/>
                        <field name="bundle_nrc" widget="monetary"
                               options="{'currency_field': 'sale_order_currency_id'}"
                               invisible="0"/>
                    </group>
                </div>
                <!--FOOTER LAYOUT-->
                <footer>
                    <button name="button_bundle_save"
                            string="Save Bundle" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('show_bundle', '=', False)]}"/>
                    <button name="button_cancel" string="Cancel"
                            class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="bundle_details_create" model="ir.actions.act_window">
        <field name="name">Create Bundle</field>
        <field name="res_model">bundle.details</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="bundle_details_form"/>
        <field name="target">new</field>
    </record>

</odoo>
