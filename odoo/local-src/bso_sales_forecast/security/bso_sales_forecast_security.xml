<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_forecast">
        <field name="name">Forecast</field>
        <field name="sequence">22</field>
    </record>

    <record id="group_forecast_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_forecast"/>
        <field name="implied_ids"
               eval="[(4, ref('account.group_account_manager'))]"/>
    </record>

    <record id="group_forecast_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_forecast"/>
        <field name="implied_ids" eval="[(4, ref('group_forecast_user'))]"/>
    </record>

    <record id="group_forecast_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_forecast"/>
        <field name="implied_ids" eval="[(4, ref('group_forecast_officer'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="bso_sales_forecast_multi_company_rule" model="ir.rule">
        <field name="name">Forecast Report multi company</field>
        <field name="model_id" ref="model_forecast_report"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

</odoo>