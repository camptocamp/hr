<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_create_project_del_button" model="ir.ui.view">
        <field name="name">sale.order.create.project.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id"
               ref="bso_dealsheet.sale_order_dealsheet"/>
        <field name="arch" type="xml">

            <header position="inside">
                <button name="create_project_delivery" type="object"
                        string='Kick-Off' class="btn-primary"
                        attrs="{'invisible':[('delivery_project_id', '!=', False)]}"
                        states="sale,done"/>
            </header>
            <page>
                <field name="delivery_project_id" invisible="1"/>
            </page>
        </field>
    </record>
</odoo>
