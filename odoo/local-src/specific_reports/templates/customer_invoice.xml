<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="report_invoice_document_inherit_sale_specific" inherit_id="sale.report_invoice_document_inherit_sale">

    <xpath expr='//div[@name="invoice_address"]/span[@t-if="o.partner_id.vat"]'
           position="replace">
      <span t-if="o.partner_id.vat">VAT Number: <span t-field="o.partner_id.vat"/></span>
    </xpath>
    <xpath expr='//div[@name="invoice_address"]/preceding-sibling::div[1]/span[@t-if="o.partner_id.vat"]'
           position="replace">
      <span t-if="o.partner_id.vat">VAT Number: <span t-field="o.partner_id.vat"/></span>
    </xpath>
    <xpath expr='//div[@name="invoice_address"]/preceding-sibling::div[1]/div/span[@t-if="o.partner_id.vat"]'
           position="replace">
      <span t-if="o.partner_id.vat">VAT Number: <span t-field="o.partner_id.vat"/></span>
    </xpath>

    <xpath expr="//p[@t-field='o.origin']/preceding-sibling::strong"
           position="replace">
      <strong>Ref. Source:</strong>
    </xpath>
  </template>

  <template id="report_invoice_payment_mode_inherit" inherit_id="account_payment_partner.report_invoice_payment_mode">
    <xpath expr="//p[@t-if='o.payment_mode_id.note']" position="replace" />
    <xpath expr="//p[@t-if='o.partner_bank_id']" position="after">
      <p t-if="o.payment_mode_id.note">
        <span t-field="o.payment_mode_id.note"/>
      </p>
    </xpath>
  </template>

</odoo>
