<odoo>
    <record id="google_sheet_setting_form" model="ir.ui.view">
        <field name="name">google.sheet.settings.form</field>
        <field name="model">google.sheet.settings</field>
        <field name="arch" type="xml">
            <form string="Settings" class="oe_form_configuration">
                <header>
                    <button string="Save" type="object"
                            name="write" class="oe_highlight"/>
                </header>
                <group>
                    <field name="credentials"/>
                </group>
            </form>
        </field>
    </record>
    <record model="ir.actions.server" id="google_sheet_settings_action">
        <field name="name">Google Sheet Settings</field>
        <field name="model_id" ref="model_google_sheet_settings"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_settings()
        </field>
    </record>

    <menuitem
            id="google_sheet_settings_menu"
            string="Google Sheet Settings"
            parent="bso_google_sheet_integration.menu_google_sheet_workbook"
            action="google_sheet_settings_action"
            sequence="20"/>
</odoo>