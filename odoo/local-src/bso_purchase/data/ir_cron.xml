<?xml version="1.0" encoding="utf-8"?>
<odoo> <!-- Add noupdate -->

    <!-- Automatic Invoice of PO -->

    <record model="ir.cron" id="cron_po_auto_invoice_monthly_end_of_term">
      <field name="name">Purchase Order Auto Invoice (monthly, end of term)</field>
      <field name="interval_number" eval="1"/>
      <field name="active" eval="False" /> <!-- To activate later -->
      <field name="interval_type">months</field>
      <field name="model">account.invoice</field>
      <field name="function">cron_po_auto_invoice</field>
      <field name="args">('monthly', 'end_of_term')</field>
      <field name="numbercall">-1</field>
    </record>

    <record model="ir.cron" id="cron_po_auto_invoice_monthly_start_of_term">
      <field name="name">Purchase Order Auto Invoice (monthly, start of term)</field>
