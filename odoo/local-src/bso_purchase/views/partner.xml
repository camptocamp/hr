<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_supplier_invoicing" model="ir.ui.view">
      <field name="name">res.partner.purchase.supplier.invoicing</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="purchase.view_partner_property_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='property_purchase_currency_id']" position="before">
          <field name="automatic_supplier_invoicing"/>
          <field name="group_supplier_invoice"/>
          <field name="supplier_invoicing_period"/>
          <field name="supplier_invoicing_mode"/>
        </xpath>
      </field>
    </record>
</odoo>
