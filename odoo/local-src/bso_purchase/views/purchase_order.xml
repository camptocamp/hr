<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_specific" model="ir.ui.view">
      <field name="name">purchase.order.form.specific</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
          </button>
        </xpath>
        <xpath expr="//notebook" position="before">
          <field name="has_subscription" invisible="1"/>
          <group name="subscription_informations" string="Subcription information" attrs="{'invisible': [('has_subscription', '=', False)]}">
            <group>
              <field name="subscr_date_start"/>
              <field name="subscr_date_end" />
              <field name="continue_after_end"/>
            </group>
            <group>
              <field name="subscr_duration" />
            </group>
          </group>
        </xpath>
        <field name="incoterm_id" position="after">
          <field name="supplier_invoicing_period"/>
          <field name="supplier_invoicing_mode"/>
        </field>
      </field>
    </record>

    <record id="purchase_order_search_filter" model="ir.ui.view">
      <field name="name">purchase.order.search.filter.specific</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='to_approve']" position="after">
           <filter string="Archived" domain="[('active', '=',False)]"/>
         </xpath>
      </field>
    </record>
</odoo>
