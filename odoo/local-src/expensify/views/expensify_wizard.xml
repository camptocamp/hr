<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="expensify_wizard" model="ir.ui.view">
        <field name="name">Expensify Wizard</field>
        <field name="model">expensify.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Expenses">
                <field name="employee_id" invisible="1"/>
                <field name="expensify_expenses" nolabel="1">
                    <tree editable="bottom">
                        <field name="expensify_id" invisible="1"/>
                        <field name="date"/>
                        <field name="name"/>
                        <field name="product_id"
                               domain="[('can_be_expensed', '=', True)]"/>
                        <field name="amount"/>
                        <field name="currency_id"/>
                        <field name="company_id"
                               groups="base.group_multi_company"/>
                        <field name="tax_ids" widget="many2many_tags"
                               domain="[('company_id', '=', company_id), ('type_tax_use', '=', 'purchase')]"/>
                        <field name="analytic_account_id"
                               groups="analytic.group_analytic_accounting"/>
                        <field name="payment_mode"/>
                        <field name="description" invisible="1"/>
                        <field name="receipt" widget="image"/>
                    </tree>
                </field>
                <footer>
                    <button name="button_import"
                            string="Import" type="object"
                            class="oe_highlight"/>
                    <button name="button_cancel" string="Cancel"
                            class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
