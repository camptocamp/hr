<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="expensify_wizard" model="ir.ui.view">
        <field name="name">Expensify Wizard</field>
        <field name="model">expensify.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Expenses">
                <field name="employee_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="expensify_expenses"
                       context="{'default_company_id': company_id}"/>
                <footer>
                    <button name="button_import_submit" invisible="1"
                            string="Import &amp; Submit" type="object"
                            class="oe_highlight"/>
                    <button name="button_import"
                            string="Import" type="object"
                            class="oe_highlight"/>
                    <button name="button_cancel" string="Cancel"
                            class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
