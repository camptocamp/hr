<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="expensify_expense" model="ir.ui.view">
        <field name="name">Expensify Expense</field>
        <field name="model">expensify.expense</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="expensify_wizard_id" invisible="1"/>
                <field name="expensify_id" invisible="1"/>
                <field name="date"/>
                <field name="name"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="receipt" widget="image"/>
                <field name="description" invisible="1"/>
                <field name="payment_mode" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="product_id"
                       domain="[('can_be_expensed', '=', True)]"/>
                <field name="tax_id"
                       domain="[('can_be_expensed', '=', True), ('company_id', '=', company_id)]"/>
                <field name="analytic_account_id"
                       groups="analytic.group_analytic_accounting"/>
            </tree>
        </field>
    </record>

</odoo>
