<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="expensify_expense" model="ir.ui.view">
        <field name="name">Expensify Expense</field>
        <field name="model">expensify.expense</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="expensify_wizard_id" invisible="1"/>
                <field name="expensify_id" invisible="1"/>
                <field name="date" required="1"/>
                <field name="name" required="1"/>
                <field name="amount" required="1"/>
                <field name="currency_id" required="1"/>
                <field name="receipt" required="1"/>
                <field name="product_id" widget="selection" required="1"
                       domain="[('can_be_expensed', '=', True)]"/>
                <field name="analytic_account_id" required="0"
                       groups="analytic.group_analytic_accounting"/>
                <field name="description" invisible="1"/>
            </tree>
        </field>
    </record>

</odoo>
