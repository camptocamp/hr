<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_sales_commission">
        <field name="name">Sales Commission</field>
    </record>

    <!-- groups -->

    <record id="group_sales_commission_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_sales_commission"/>
    </record>

    <record id="group_sales_commission_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_sales_commission"/>
        <field name="implied_ids"
               eval="[(4, ref('bso_sales_commission.group_sales_commission_user'))]"/>
    </record>

    <record id="group_sales_commission_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_sales_commission"/>
        <field name="implied_ids"
               eval="[(4, ref('bso_sales_commission.group_sales_commission_officer'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <!-- Targets rules -->

    <record id="targets_visibility_rule_for_users" model="ir.rule">
        <field name="name">targets.visibility.rule.for.users</field>
        <field name="model_id" ref="model_sale_target"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups"
               eval="[(4, ref('bso_sales_commission.group_sales_commission_user'))]"/>
    </record>
    <record id="targets_visibility_rule_for_officers" model="ir.rule">
        <field name="name">targets.visibility.rule.for.officers</field>
        <field name="model_id" ref="model_sale_target"/>
        <field name="domain_force">[('user_id.employee_ids.parent_id.user_id',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('bso_sales_commission.group_sales_commission_officer'))]"/>
    </record>
    <record id="targets_visibility_rule_for_managers" model="ir.rule">
        <field name="name">targets.visibility.rule.for.managers</field>
        <field name="model_id" ref="model_sale_target"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('bso_sales_commission.group_sales_commission_manager'))]"/>
    </record>

    <!-- Sales commission rules -->

    <record id="sales_commission_view_for_users" model="ir.rule">
        <field name="name">sales commission view for users</field>
        <field name="model_id" ref="model_salesperson_commission_quarter"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups"
               eval="[(4, ref('bso_sales_commission.group_sales_commission_user'))]"/>
    </record>

    <record id="sales_commission_view_for_officers" model="ir.rule">
        <field name="name">sales commission view for officers</field>
        <field name="model_id" ref="model_salesperson_commission_quarter"/>
        <field name="domain_force">[('user_id.employee_ids.parent_id.user_id',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('bso_sales_commission.group_sales_commission_officer'))]"/>
    </record>

    <record id="sales_commission_view_for_managers" model="ir.rule">
        <field name="name">sales commission view for managers</field>
        <field name="model_id" ref="model_salesperson_commission_quarter"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('bso_sales_commission.group_sales_commission_manager'))]"/>
    </record>


</odoo>
