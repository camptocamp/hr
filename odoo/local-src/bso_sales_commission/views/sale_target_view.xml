<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_target_form" model="ir.ui.view">
        <field name="name">sale.target.form</field>
        <field name="model">sale.target</field>
        <field name="arch" type="xml">
            <form string="Seller Target">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="year"/>
                        <field name="currency_id"/>
                    </group>
                    <group>
                        <field name="annual_target_nrr"/>
                        <field name="quarter_target_nrr"/>
                    </group>
                    <group>
                        <field name="annual_target_mrr"/>
                        <field name="quarter_target_mrr"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_target_tree" model="ir.ui.view">
        <field name="name">sale.target.tree</field>
        <field name="model">sale.target</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="year"/>
                <field name="currency_id" invisible="1"/>
                <field name="annual_target_nrr"/>
                <field name="annual_target_mrr"/>
            </tree>
        </field>
    </record>

    <record id="target_action" model="ir.actions.act_window">
        <field name="name">Targets</field>
        <field name="res_model">sale.target</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="sales_commissions_menu"
            name="Commissions"
            parent="sales_team.menu_base_partner"
            sequence="6"/>

    <menuitem id="target_menu" name="Targets" sequence="1"
              action="target_action"
              parent="bso_sales_commission.sales_commissions_menu"
              groups="bso_sales_commission.group_sales_commission_user"/>
</odoo>
