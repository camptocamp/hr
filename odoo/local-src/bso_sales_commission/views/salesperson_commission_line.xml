<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="salesperson_commission_line_form" model="ir.ui.view">
        <field name="name">salesperson.commission.line.form</field>
        <field name="model">salesperson.commission.line</field>
        <field name="arch" type="xml">
            <form string="Salespeople">
                <sheet>
                    <group>
                        <field name="order_id" readonly="1"/>
                        <field name="subscription_management"/>
                        <field name="duration"/>
                        <field name="is_employed_in_fr" invisible="1"/>
                        <field name="is_main_salesperson" invisible="1"/>
                        <field name="confirmation_date" invisible="1"/>
                        <field name="year" invisible="1"/>
                        <field name="quarter" invisible="1"/>
                        <field name="margin_nrr" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="user_id" readonly="1"/>
                        <field name="_percentage" invisible="1"/>
                        <field name="percentage" readonly="1"/>
                        <field name="exchange_rate_id" invisible="1"/>
                        <field name="order_currency_id"
                               attrs="{'invisible': [('exchange_rate_id', '=', False)]}"/>
                        <field name="rate"
                               attrs="{'invisible': [('exchange_rate_id', '=', False)]}"/>
                        <field name="commission"/>
                    </group>
                    <group>
                        <group string="NRR">
                            <field name="earnings_nrr"/>
                            <field name="margin_nrr"/>
                            <field name="nrm_factor"/>
                            <field name="manager_adjustment_nrr"/>
                            <field name="commission_nrr"/>
                        </group>
                        <group string="MRR">
                            <field name="earnings_mrr"/>
                            <field name="renewal_ratio"
                                   attrs="{'invisible': [('subscription_management', '!=', 'renew')]}"/>
                            <field name="renewal_factor"
                                   attrs="{'invisible': [('subscription_management', '!=', 'renew')]}"/>
                            <field name="duration_factor"/>
                            <field name="mrr_factor"/>
                            <field name="manager_adjustment_mrr"/>
                            <field name="commission_mrr"/>
                        </group>
                    </group>
                </sheet>
                <div>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="salesperson_commission_line_tree" model="ir.ui.view">
        <field name="name">salesperson.commission.line.tree</field>
        <field name="model">salesperson.commission.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id"/>
                <field name="subscription_management"/>
                <field name="duration"/>
                <field name="percentage"/>
                <field name="currency_id" invisible="1"/>
                <field name="earnings_nrr"/>
                <field name="earnings_mrr"/>
                <field name="commission"/>
            </tree>
        </field>
    </record>
</odoo>
