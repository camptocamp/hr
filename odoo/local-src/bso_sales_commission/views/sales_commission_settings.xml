<?xml version="1.0"?>
<odoo>

    <record id="sales_commission_settings_view_form" model="ir.ui.view">
        <field name="name">sales commission settings</field>
        <field name="model">sales.commission.settings</field>
        <field name="arch" type="xml">
            <form string="Sale commission Settings"
                  class="oe_form_configuration">
                <header>
                    <button string="Save" type="object"
                            name="write" class="oe_highlight"/>
                </header>
                <group string="Term Weight">
                    <field name="duration_factor_12"/>
                    <field name="duration_factor_24"/>
                    <field name="duration_factor_36"/>
                </group>
                <group string="Commission Weight">
                    <field name="mrr_factor"/>
                    <field name="mrr_factor_fr"/>
                    <field name="nrm_factor"/>
                </group>
                <group string="Renewal Threshold Factor">
                    <field name="renewal_factor_80"/>
                    <field name="renewal_factor_90"/>
                    <field name="renewal_factor_100"/>
                </group>
                <group string="Quota Attainment Factor Weight">
                    <field name="attainment_factor_0"/>
                    <field name="attainment_factor_50"/>
                    <field name="attainment_factor_100"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.server" id="action_settings">
        <field name="name">Sales Commission Settings</field>
        <field name="model_id" ref="model_sales_commission_settings"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_settings()
        </field>
    </record>

    <menuitem
            id="sales_commission_settings_menu"
            string="Commission Settings"
            parent="bso_sales_commission.sales_commissions_menu"
            groups="bso_sales_commission.group_sales_commission_manager"
            action="action_settings"
            sequence="20"/>
</odoo>

