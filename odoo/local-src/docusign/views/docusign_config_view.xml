<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="menu_docusign" name="Docusign" sequence="1" />
        <menuitem name="Docusign" id="menu_docusign_con" parent="menu_docusign" />
        <!-- Docusign Config server -->

        <record model="ir.ui.view" id="docusign_config_list">
            <field name="model">docusign.config</field>
            <field name="arch" type="xml">
                <tree string="Docusign Config">
                    <field name="name" />
                    <field name="docusign_user" />
                    <field name="docusign_baseurl" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="docusign_config_form">
            <field name="model">docusign.config</field>
            <field name="arch" type="xml">
                <form string="Docusign Config">
                    <header>
                        <button name="test_docusign_connection" type="object"
                            string="Test &amp; Confirmed" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm" readonly="1" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group string="Security and Authentication">
                            <field name="url" required="1" />
                            <field name="docusign_user" required="1"/>
                            <field name="docusign_pass" password="True" required="1" />
                            <field name="docusign_key" required="1"/>
                        </group>
                        <group string="BaseUrl">
                            <field name="docusign_baseurl" readonly="1" />
                            <field name="docusign_acc_no" readonly="1"/>
                            <field name="docusign_authstr" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_document_config_list">
            <field name="name">Docusign Config</field>
            <field name="res_model">docusign.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="docusign_config_list" />
        </record>
        <menuitem id="menu_docusign_config" parent="menu_docusign_con"
            action="action_document_config_list" sequence="5" />
    </data>
</odoo>