<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_backbone">
        <field name="name">Backbone</field>
        <field name="sequence">21</field>
    </record>

    <record id="group_backbone_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_backbone"/>
    </record>

    <record id="group_backbone_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_backbone"/>
        <field name="implied_ids" eval="[(4, ref('group_backbone_user'))]"/>
    </record>

    <record id="group_backbone_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_backbone"/>
        <field name="implied_ids" eval="[(4, ref('group_backbone_officer'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

</odoo>