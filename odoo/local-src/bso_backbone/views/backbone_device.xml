<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="backbone_device_tree" model="ir.ui.view">
        <field name="name">backbone.device.tree</field>
        <field name="model">backbone.device</field>
        <field name="arch" type="xml">
            <tree string="Device">
                <field name="name"/>
                <field name="pop_id"/>
                <field name="supplier_id" invisible="1"/>
                <field name="supplier_name"/>
                <field name="active"/>
                <field name="attachment_number" invisible="True"/>
                <button name="action_get_attachment_view"
                        string="View Attached Documents" type="object"
                        icon="fa-paperclip"
                        attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <record id="backbone_device_form" model="ir.ui.view">
        <field name="name">backbone.device.form</field>
        <field name="model">backbone.device</field>
        <field name="arch" type="xml">
            <form string="Device">
                <sheet>
                    <div class="oe_button_box">
                        <!--<button name="remove_space_from_device_name" string="Remove space from name" type="object"/>-->
                        <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object">
                            <field name="attachment_number" widget="statinfo"
                                   string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="pop_id"/>
                        <field name="supplier_id" invisible="1"
                               options="{'create': false, 'create_edit': false}"/>
                        <field name="supplier_name"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="backbone_device_search" model="ir.ui.view">
        <field name="name">backbone.device.search</field>
        <field name="model">backbone.device</field>
        <field name="arch" type="xml">
            <search string="Device">
                <field name="name"/>
                <field name="pop_id"/>
                <field name="supplier_id" invisible="1"/>
                <field name="supplier_name"/>
                <separator/>
                <filter string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

</odoo>
