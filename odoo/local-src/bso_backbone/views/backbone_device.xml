<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="backbone_device_tree" model="ir.ui.view">
        <field name="name">backbone.device.tree</field>
        <field name="model">backbone.device</field>
        <field name="arch" type="xml">
            <tree string="Device">
                <field name="name"/>
                <field name="pop_id"/>
                <field name="partner_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="backbone_device_form" model="ir.ui.view">
        <field name="name">backbone.device.form</field>
        <field name="model">backbone.device</field>
        <field name="arch" type="xml">
            <form string="Device">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="pop_id"/>
                        <field name="partner_id"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
