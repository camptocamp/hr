<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="backbone_link_tree" model="ir.ui.view">
        <field name="name">backbone.link.tree</field>
        <field name="model">backbone.link</field>
        <field name="arch" type="xml">
            <tree string="Link">
                <field name="name" invisible="1"/>
                <field name="a_device_id"/>
                <field name="a_xco_id"/>
                <field name="z_device_id"/>
                <field name="z_xco_id"/>
                <field name="tnms_id"/>
                <field name="supplier_id" invisible="1"/>
                <field name="supplier_name"/>
                <field name="supplier_link_id"/>
                <field name="is_wireless"/>
                <field name="latency"/>
                <field name="latency_sla"/>
                <field name="bandwidth"/>
                <field name="bearer"/>
                <field name="cable_system"/>
                <field name="is_protected"/>
                <field name="cable_system_protection"
                       attrs="{'invisible': [('is_protected', '=', False)]}"/>
                <field name="currency_id"
                       groups="bso_backbone.group_backbone_manager"/>
                <field name="nrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       groups="bso_backbone.group_backbone_manager"/>
                <field name="mrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       groups="bso_backbone.group_backbone_manager"/>
                <field name="mrc_mb" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       groups="bso_backbone.group_backbone_manager"
                       invisible="1"/>
                <field name="nrr" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       groups="bso_backbone.group_backbone_manager"
                       invisible="1"/>
                <field name="mrr" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       groups="bso_backbone.group_backbone_manager"
                       invisible="1"/>
                <field name="mrr_mb" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       groups="bso_backbone.group_backbone_manager"
                       invisible="1"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="auto_renewal"/>
                <field name="notes" invisible="1"/>
                <field name="active"/>
                <field name="attachment_number" invisible="True"/>
                <button name="action_get_attachment_view"
                        string="View Attached Documents" type="object"
                        icon="fa-paperclip"
                        attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <record id="backbone_link_form" model="ir.ui.view">
        <field name="name">backbone.link.form</field>
        <field name="model">backbone.link</field>
        <field name="arch" type="xml">
            <form string="Link">
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object">
                            <field name="attachment_number" widget="statinfo"
                                   string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="a_device_id"/>
                        <field name="a_xco_id"/>
                        <field name="z_device_id"/>
                        <field name="z_xco_id"/>
                    </group>
                    <group>
                        <field name="tnms_id"/>
                        <field name="supplier_id" invisible="1"
                               options="{'create': false, 'create_edit': false}"/>
                        <field name="supplier_name"/>
                        <field name="supplier_link_id"/>
                        <field name="is_wireless"/>
                        <field name="latency"/>
                        <field name="latency_sla"/>
                        <field name="bandwidth"/>
                        <field name="bearer"/>
                        <field name="cable_system"/>
                        <field name="is_protected"/>
                        <field name="cable_system_protection"
                               attrs="{'invisible': [('is_protected', '=', False)]}"/>
                    </group>
                    <group>
                        <field name="currency_id"
                               groups="bso_backbone.group_backbone_manager"
                               options="{'create': false, 'create_edit': false}"/>
                        <field name="nrc" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               groups="bso_backbone.group_backbone_manager"/>
                        <field name="mrc" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               groups="bso_backbone.group_backbone_manager"/>
                        <field name="mrc_mb" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               groups="bso_backbone.group_backbone_manager"
                               invisible="1"/>
                        <field name="nrr" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               groups="bso_backbone.group_backbone_manager"/>
                        <field name="mrr" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               groups="bso_backbone.group_backbone_manager"/>
                        <field name="mrr_mb" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               groups="bso_backbone.group_backbone_manager"
                               invisible="1"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="auto_renewal"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="backbone_link_search" model="ir.ui.view">
        <field name="name">backbone.link.search</field>
        <field name="model">backbone.link</field>
        <field name="arch" type="xml">
            <search string="Link">
                <field name="name"/>
                <field name="a_device_id"/>
                <field name="z_device_id"/>
                <field name="supplier_id" invisible="1"/>
                <field name="supplier_name"/>
                <field name="supplier_link_id"/>
            </search>
        </field>
    </record>

</odoo>