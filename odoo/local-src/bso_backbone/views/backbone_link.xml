<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="backbone_link_tree" model="ir.ui.view">
        <field name="name">backbone.link.tree</field>
        <field name="model">backbone.link</field>
        <field name="arch" type="xml">
            <tree string="Link">
                <field name="name" invisible="1"/>
                <field name="a_device_id"/>
                <field name="a_xco_id"/>
                <field name="z_device_id"/>
                <field name="z_xco_id"/>
                <field name="partner_id"/>
                <field name="latency"/>
                <field name="bandwidth"/>
                <field name="cable"/>
                <field name="is_protected"/>
                <field name="currency_id"/>
                <field name="cost_upfront" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="cost_monthly" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="cost_monthly_per_mb" invisible="1"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="price_upfront" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="price_monthly" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="price_monthly_per_mb" invisible="1"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="date_end"
                       attrs="{'required': [('paid_by_bso', '=', True)]}"/>
                <field name="auto_renewal"
                       attrs="{'required': [('paid_by_bso', '=', True)]}"/>
                <field name="notes" invisible="1"/>
                <field name="active"/>
                <field name="attachment_number" invisible="True"/>
                <button name="action_get_attachment_view"
                        string="View Attached Documents" type="object"
                        icon="fa-paperclip"
                        attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <record id="backbone_link_form" model="ir.ui.view">
        <field name="name">backbone.link.form</field>
        <field name="model">backbone.link</field>
        <field name="arch" type="xml">
            <form string="Link">
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object">
                            <field name="attachment_number" widget="statinfo"
                                   string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="a_device_id"/>
                        <field name="a_xco_id"/>
                        <field name="z_device_id"/>
                        <field name="z_xco_id"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                        <field name="latency"/>
                        <field name="bandwidth"/>
                        <field name="cable"/>
                        <field name="is_protected"/>
                    </group>
                    <group>
                        <field name="currency_id"/>
                        <field name="cost_upfront" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="cost_monthly" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="cost_monthly_per_mb" invisible="1"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="price_upfront" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="price_monthly" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="price_monthly_per_mb" invisible="1"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="date_end"/>
                        <field name="auto_renewal"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>