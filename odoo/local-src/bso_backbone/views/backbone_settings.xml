<?xml version="1.0"?>
<odoo>
    <record id="bso_backbone_settings_view_form" model="ir.ui.view">
        <field name="name">bso backbone settings</field>
        <field name="model">backbone.settings</field>
        <field name="arch" type="xml">
            <form string="BSO backbone Settings">
                <header>
                    <button string="Save" type="object"
                            name="write" class="oe_highlight"/>
                </header>
                <group string="CYMPA">
                    <field name="cympa_url"/>
                    <field name="username"/>
                    <field name="password" password="True"/>
                </group>
                <group string="Sync options">
                    <field name="is_creation_enabled"/>
                    <field name="is_archiving_enabled"/>
                </group>
                <group string="Regex">
                    <field name="regex_city"/>
                    <field name="regex_pop"/>
                    <field name="regex_device"/>
                    <field name="regex_pop_code"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
