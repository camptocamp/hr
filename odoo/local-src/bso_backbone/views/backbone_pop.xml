<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="backbone_pop_tree" model="ir.ui.view">
        <field name="name">backbone.pop.tree</field>
        <field name="model">backbone.pop</field>
        <field name="arch" type="xml">
            <tree string="POP">
                <field name="name"/>
                <field name="code"/>
                <field name="supplier_id" invisible="1"/>
                <field name="supplier_name"/>
                <field name="address"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="currency_id"/>
                <field name="kva_mrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="rack_nrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="rack_mrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="xco_nrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="xco_mrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="active"/>
                <field name="attachment_number" invisible="True"/>
                <button name="action_get_attachment_view"
                        string="View Attached Documents" type="object"
                        icon="fa-paperclip"
                        attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <record id="backbone_pop_form" model="ir.ui.view">
        <field name="name">backbone.pop.form</field>
        <field name="model">backbone.pop</field>
        <field name="arch" type="xml">
            <form string="Pop">
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object">
                            <field name="attachment_number" widget="statinfo"
                                   string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="supplier_id" invisible="1"
                               options="{'create': false, 'create_edit': false}"/>
                        <field name="supplier_name"/>
                        <field name="address"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>
                    <group>
                        <field name="currency_id"
                               options="{'create': false, 'create_edit': false}"/>
                        <field name="kva_mrc" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="rack_nrc" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="rack_mrc" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="xco_nrc" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                        <field name="xco_mrc" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <group>
                        <field name="active"
                               groups="bso_backbone.group_backbone_manager"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="backbone_pop_search" model="ir.ui.view">
        <field name="name">backbone.pop.search</field>
        <field name="model">backbone.pop</field>
        <field name="arch" type="xml">
            <search string="Pop">
                <field name="name"/>
                <field name="code"/>
                <field name="supplier_name"/>
                <separator/>
                <filter string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

</odoo>