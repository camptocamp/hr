<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="backbone_fx_tree" model="ir.ui.view">
        <field name="name">backbone.fx.tree</field>
        <field name="model">backbone.fx</field>
        <field name="arch" type="xml">
            <tree string="FX">
                <field name="name"/>
                <field name="city"/>
                <field name="country"/>
                <field name="pop_id"/>
                <field name="active"/>
                <field name="attachment_number" invisible="True"/>
                <button name="action_get_attachment_view"
                        string="View Attached Documents" type="object"
                        icon="fa-paperclip"
                        attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <record id="backbone_fx_form" model="ir.ui.view">
        <field name="name">backbone.fx.form</field>
        <field name="model">backbone.fx</field>
        <field name="arch" type="xml">
            <form string="FX">
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object">
                            <field name="attachment_number" widget="statinfo"
                                   string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="city"/>
                        <field name="country"/>
                        <field name="pop_id"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="backbone_fx_search" model="ir.ui.view">
        <field name="name">backbone.fx.search</field>
        <field name="model">backbone.fx</field>
        <field name="arch" type="xml">
            <search string="FX">
                <field name="name"/>
                <field name="city"/>
                <field name="country"/>
                <field name="pop_id"/>
                <separator/>
                <filter string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

</odoo>
