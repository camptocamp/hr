<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="backbone_xco_tree" model="ir.ui.view">
        <field name="name">backbone.xco.tree</field>
        <field name="model">backbone.xco</field>
        <field name="arch" type="xml">
            <tree string="XConnect">
                <field name="a_side"/>
                <field name="a_side_port"/>
                <field name="z_side"/>
                <field name="z_side_port"/>
                <field name="supplier_id"/>
                <field name="supplier_name" invisible="1"/>
                <field name="xco_ref"/>
                <field name="used"/>
                <field name="project_code"/>
                <field name="xco_type"/>
                <field name="service_ref"
                       attrs="{'invisible': [('xco_type', '=', 'backbone')]}"/>
                <field name="link_ref"
                       attrs="{'invisible': [('xco_type', '=', 'client')]}"/>
                <field name="paid_by_bso"/>
                <field name="notes" invisible="1"/>
                <field name="active"/>
                <field name="attachment_number" invisible="True"/>
                <button name="action_get_attachment_view"
                        string="View Attached Documents" type="object"
                        icon="fa-paperclip"
                        attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <record id="backbone_xco_tree_group_officer" model="ir.ui.view">
        <field name="name">backbone.xco.tree.group_officer</field>
        <field name="model">backbone.xco</field>
        <field name="inherit_id" ref="bso_backbone.backbone_xco_tree"/>
        <field name="groups_id"
               eval="[(6, 0, [ref('bso_backbone.group_backbone_officer')])]"/>
        <field name="arch" type="xml">
            <field name="notes" position="before">
                <field name="currency_id"/>
                <field name="nrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="mrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="auto_renewal"/>
            </field>
        </field>
    </record>

    <record id="backbone_xco_form" model="ir.ui.view">
        <field name="name">backbone.xco.form</field>
        <field name="model">backbone.xco</field>
        <field name="arch" type="xml">
            <form string="XConnect">
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object">
                            <field name="attachment_number" widget="statinfo"
                                   string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <field name="a_side"/>
                        <field name="a_side_port"/>
                        <field name="z_side"/>
                        <field name="z_side_port"/>
                        <field name="supplier_id"
                               options="{'create': false, 'create_edit': false}"/>
                        <field name="supplier_name" invisible="1"/>
                        <field name="xco_ref"/>
                        <field name="used"/>
                    </group>
                    <group>
                        <field name="project_code"/>
                        <field name="xco_type"/>
                        <field name="service_ref"
                               attrs="{'invisible': ['|', ('xco_type', '=', False), ('xco_type', '=', 'backbone')], 'required': [('xco_type', '=', 'client')]}"/>
                        <field name="link_ref"
                               attrs="{'invisible': ['|', ('xco_type', '=', False), ('xco_type', '=', 'client')], 'required': [('xco_type', '=', 'backbone')]}"/>
                        <field name="paid_by_bso"
                               attrs="{'invisible': [('xco_type', '=', False)]}"/>
                    </group>
                    <group groups="bso_backbone.group_backbone_officer"/>
                    <group>
                        <field name="notes"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="backbone_xco_form_group_officer" model="ir.ui.view">
        <field name="name">backbone.xco.form.group_officer</field>
        <field name="model">backbone.xco</field>
        <field name="inherit_id" ref="bso_backbone.backbone_xco_form"/>
        <field name="groups_id"
               eval="[(6, 0, [ref('bso_backbone.group_backbone_officer')])]"/>
        <field name="arch" type="xml">
            <group groups="bso_backbone.group_backbone_officer"
                   position="inside">
                <field name="currency_id"
                       attrs="{'required': [('paid_by_bso', '=', True)], 'invisible': [('paid_by_bso', '=', False)]}"
                       options="{'create': false, 'create_edit': false}"/>
                <field name="nrc" widget="monetary"
                       attrs="{'required': [('paid_by_bso', '=', True)], 'invisible': [('paid_by_bso', '=', False)]}"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="mrc" widget="monetary"
                       attrs="{'required': [('paid_by_bso', '=', True)], 'invisible': [('paid_by_bso', '=', False)]}"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="date_start"
                       attrs="{'required': [('paid_by_bso', '=', True)], 'invisible': [('paid_by_bso', '=', False)]}"/>
                <field name="date_end"
                       attrs="{'required': [('paid_by_bso', '=', True)], 'invisible': [('paid_by_bso', '=', False)]}"/>
                <field name="auto_renewal"
                       attrs="{'invisible': [('paid_by_bso', '=', False)]}"/>
            </group>
        </field>
    </record>

    <record id="backbone_xco_search" model="ir.ui.view">
        <field name="name">backbone.xco.search</field>
        <field name="model">backbone.xco</field>
        <field name="arch" type="xml">
            <search string="XConnect">
                <field name="a_side"/>
                <field name="z_side"/>
                <field name="supplier_id"/>
                <field name="supplier_name" invisible="1"/>
                <field name="xco_ref"/>
                <separator/>
                <filter string="XConnects Client"
                        domain="[('xco_type', '=', 'client')]"/>
                <filter string="XConnects Backbone"
                        domain="[('xco_type', '=', 'backbone')]"/>
                <filter string="Paid By BSO"
                        domain="[('paid_by_bso', '=', True)]"/>
                <separator/>
                <filter string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

</odoo>