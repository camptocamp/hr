<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_form_view_notebook_visibility_family"
            model="ir.ui.view">
        <field name="name">hr.employee.form.notebook.visibility.family</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_family.hr_employee_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[4]" position="attributes">
                <attribute name="groups">hr.group_hr_manager</attribute>
            </xpath>
        </field>
    </record>

    <record id="hr_employee_form_view_notebook_visibility" model="ir.ui.view">
        <field name="name">hr.employee.form.notebook.visibility</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']"
                   position="attributes">
                <attribute name="groups">hr.group_hr_manager</attribute>
            </xpath>
            <xpath expr="//page[@name='hr_settings']" position="attributes">
                <attribute name="groups">hr.group_hr_manager</attribute>
            </xpath>
        </field>
    </record>

</odoo>