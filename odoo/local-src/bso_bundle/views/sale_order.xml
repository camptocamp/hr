<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="add_bundle_details_field_to_order_line" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form" position="inside">
                <field name="bundle_details_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="add_bundle_edit_to_sale_order_line" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']"
                   position="after">
                <field name="bundle_details_id" invisible="1"/>
                <button string="Bundle"
                        name="%(bso_bundle.bundle_details_edit)d"
                        type="action"
                        class="oe_edit_only oe-link"
                        attrs="{'invisible': [('bundle_details_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="bundle_details_edit" model="ir.actions.server">
        <field name="name">Edit Bundle</field>
        <field name="model_id" ref="model_sale_order_line"/>
        <field name="code">action = object.bundle_details_edit()</field>
    </record>

</odoo>