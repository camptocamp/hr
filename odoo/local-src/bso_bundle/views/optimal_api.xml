<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="optimal_api_form" model="ir.ui.view">
        <field name="name">optimal.api.form</field>
        <field name="model">bundle.details</field>
        <field name="inherit_id" ref="bso_bundle.bundle_details_epl_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page" position="before">
                <page string="OPTIMAL">
                    <group>
                        <field name="epl_optimal_pop_a"
                               options="{'create': false, 'create_edit': false}"/>
                        <field name="epl_optimal_pop_z"
                               options="{'create': false, 'create_edit': false}"/>
                        <field name="epl_optimal_optimize" readonly="1"/>
                        <field name="epl_optimal_wireless"/>
                        <field name="epl_optimal_protected"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
