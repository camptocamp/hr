<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mail_message_subtype_form_trigger_value"
            model="ir.ui.view">
        <field name="name">mail.message.subtype.trigger.value</field>
        <field name="model">mail.message.subtype</field>
        <field name="inherit_id"
               ref="mail.view_mail_message_subtype_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="inside">
                <group name="track_subtype" string="Track subtype">
                    <field name="field_id"
                           attrs="{'required': [('trigger_value', '!=', False)]}"/>
                    <field name="trigger_value"
                           attrs="{'required': [('field_id', '!=', False)]}"/>
                </group>
                <group name="recipients" string="Recipients"
                       attrs="{'invisible':[('field_id', '=', False)]}">
                    <field name="notify_existing_followers"/>
                    <field name="group_ids"/>
                    <field name="partner_ids"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
