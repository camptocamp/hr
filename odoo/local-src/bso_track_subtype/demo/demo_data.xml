<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- manager -->
    <record model="res.users" id="manager">
        <field name="company_id" ref="base.main_company"/>
        <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        <field name="groups_id"
               eval="[(4, ref('hr_holidays.group_hr_holidays_user'))]"/>
        <field name="lang">en_US</field>
        <field name="login">manager</field>
        <field name="password">manager</field>
        <field name="name">manager</field>
        <field name="email">manager@example.com</field>
        <field name="notify_email">always</field>
    </record>

    <record model="hr.employee" id="emp_manager">
        <field name="name">emp_manager</field>
        <field name="city">Nanterre</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="gender">male</field>
        <field name="title">Test</field>
        <field name="user_login">manager_test</field>
        <field name="user_id" ref="manager"/>
        <field name="work_email">emp_manager@example.com</field>
    </record>

    <record model="hr.department" id="dept_sales">
        <field name="name">Sales</field>
        <field name="manager_id" ref="emp_manager"/>
    </record>


    <!-- salesman -->
    <record model="res.users" id="salesman">
        <field name="company_id" ref="base.main_company"/>
        <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        <field name="groups_id"
               eval="[(4, ref('sales_team.group_sale_salesman')),(4, ref('bso_dealsheet.group_dealsheet_manager'))]"/>
        <field name="lang">en_US</field>
        <field name="login">salesman</field>
        <field name="password">salesman</field>
        <field name="name">salesman</field>
        <field name="email">salesman@example.com</field>
        <field name="notify_email">always</field>
    </record>
    <record model="hr.employee" id="emp_salesman">
        <field name="name">emp_salesman</field>
        <field name="city">Nanterre</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="department_id" ref="dept_sales"/>
        <field name="gender">male</field>
        <field name="title">Test</field>
        <field name="user_login">salesman_test</field>
        <field name="user_id" ref="salesman"/>
        <field name="work_email">emp_salesman@example.com</field>
    </record>

    <!--customer -->
    <record model="res.partner" id="customer">
        <field name="name">Customer</field>
    </record>


</odoo>