<odoo>
    <record id="analytic_account_form_view" model="ir.ui.view">
        <field name="name">analytic.accout.form.view</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id"
               ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="parent_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_immediate_child_subscription" icon="fa-book" attrs="{'invisible': [('subscription_count', '=', 0)]}">
                    <field string="Children's Subscriptions" name="immediate_child_subscription_count" widget="statinfo"/>
                </button>
            </xpath>

        </field>
    </record>
</odoo>