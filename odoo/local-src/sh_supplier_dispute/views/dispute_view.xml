<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- dispute form view -->
	<record id="sh_supplier_dispute_form_view" model="ir.ui.view">
		<field name="name">sh.supplier.dispute.form.view</field>
		<field name="model">account.invoice.dispute</field>
		<field name="arch" type="xml">
			<form string="Dispute">
				<header>
                    <button name="action_solved" states="dispute" type="object" string="Solved" class="btn-primary"/>
                    <button name="action_draft" states="dispute" type="object" string="Set to Draft" class="btn-primary"/>
                    <button name="action_dispute" type="object" string="Dispute" states="draft" class="btn-primary"/>	
                    <field name="state" widget="statusbar" statusbar_visible="draft,dispute,solved"/>                    
				</header>
				<sheet>
				    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
							<field name="dispute_title"/>
                      		<field name="dispute_description"/>							
							<field name="invoice_id" domain = "[('state','=','open'),('type','=','in_invoice')]"/>
                        </group>
                        <group>
                        	<field name="date"/>
                        	<field name="user_id" options="{'no_create': True}"/>
                        </group>
                        

                    </group>                    
				</sheet>
				
			</form>
		</field>
	</record>
	
	<!-- dispute tree view -->
	<record id="sh_supplier_dispute_tree_view" model="ir.ui.view">
		<field name="name">sh.supplier.dispute.tree.view</field>
		<field name="model">account.invoice.dispute</field>
		<field name="arch" type="xml">
			<tree string="Dispute" decoration-muted="state=='cancel'">
				<field name="name" string="Dispute Number"/>
				<field name="dispute_title"/>
				<field name="invoice_id"/>
				<field name="date"/>
				<field name="user_id"/>
				<field name="state"/>
			</tree>
		</field>
	</record>
	
	<!-- dispute search view -->
    <record id="sh_supplier_dispute_search_view" model="ir.ui.view">
        <field name="name">sh.supplier.dispute.search.view</field>
        <field name="model">account.invoice.dispute</field>
        <field name="arch" type="xml">
            <search string="Search Dispute">
                <field name="name" string="Dispute" filter_domain="['|','|','|',('dispute_title','ilike',self),('name','ilike',self),('invoice_id','child_of',self),('user_id','child_of',self)]"/>
                <field name="invoice_id" operator="child_of"/>
                <field name="user_id" operator="child_of"/>
				<field name="date"/>
				
                <filter string="My Dispute" domain="[('user_id','=',uid)]" name="my_dispute_order_filter"/>
                <filter string="Draft" domain="[('state','=','draft')]" name="filter_draft"/>
                <filter string="Dispute" domain="[('state','=','dispute')]" name="filter_dispute"/>
                <filter string="Solved" domain="[('state','=','solved')]" name="filter_solved"/>
                <filter string="Date" date="date" name="filter_date"/>                                                
                <group expand="0" string="Group By">
                    <filter name="group_by_user" string="User" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter name="group_by_bill" string="Bill" domain="[]" context="{'group_by':'invoice_id'}"/>
                    <filter name="group_by_date" string="Date" domain="[]" context="{'group_by':'date'}"/>
                    <filter name="group_by_state" string="Status" domain="[]" context="{'group_by':'state'}"/>                    
                </group>
           </search>
        </field>
    </record>
    
    <!-- dispute action -->
    <record id="sh_supplier_dispute_action" model="ir.actions.act_window">
        <field name="name">Vendor Dispute</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.invoice.dispute</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
        	'search_default_my_dispute_order_filter' : True
        }</field>               
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Vendor Dispute here.
            </p>
        </field>
    </record>
    
    <!-- dispute menuitem -->
    <menuitem 
    name = "Vendor Dispute"
    action="sh_supplier_dispute_action" 
    id="sh_supplier_dispute_menu" 
    groups="account.group_account_manager"
    parent="account.menu_finance_payables" sequence="2"/>
    
    
	

</odoo>
