    <record id="bso_network_link_form_view" model="ir.ui.view">
        <field name="name">bso_network_link_form_view</field>
        <field name="model">bso.network.link</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="bso_id"/>
                    <field name="is_protected"/>
                    <field name="name"/>
                    <field name='active'/>
                </group>
                <group>
                    <group>
                        <field name="pop1_id"/>
                        <field name="pop1_device_id" domain="[('pop_id', '=', pop1_id)]"/>
                    </group>
                    <group>
                        <field name="pop2_id"/>
                        <field name="pop2_device_id" domain="[('pop_id', '=', pop2_id)]"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="bandwith"/>
                        <field name="latency"/>
                    </group>
                    <group>
                        <field name="mrc"/>
                        <field name="nrc"/>
                    </group>
                </group>
                <group>
                    <field name="partner_id"/>
                    <field name="currency_id"/>
                    <field name="cablesystem_id"/>
                </group>
            </form>
        </field>
    </record>

