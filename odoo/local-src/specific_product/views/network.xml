    <record id="bso_network_api_form_view" model="ir.ui.view">
        <field name="name">bso_network_api_form_view</field>
        <field name="model">bso.network.api</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="test_connection" string="Test connection" class="oe_highlight"/>
