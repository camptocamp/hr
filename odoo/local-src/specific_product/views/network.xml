    <record id="bso_network_pop_form_view" model="ir.ui.view">
        <field name="name">bso_network_pop_form_view</field>
        <field name="model">bso.network.pop</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="bso_id"/>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name='active'/>
                    </group>
                    <group>
                        <field name="geo_area"/>
                        <field name="longitude"/>
                        <field name="latitude"/>
                    </group>
                </group>
                <group>
                    <field name="link_ids"/>
                </group>
            </form>
        </field>
    </record>

    <record id="bso_network_pop_tree_view" model="ir.ui.view">
        <field name="name">bso_network_pop_tree_view</field>
        <field name="model">bso.network.pop</field>
