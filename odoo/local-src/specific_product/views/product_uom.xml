<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_uom__specific_form_view" model="ir.ui.view">
        <field name="name">product_uom__specific_form_view</field>
        <field name="model">product.uom</field>
        <field name="inherit_id" ref="product.product_uom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="after">
                    <field name="recurring" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="product_uom__specific_tree_view" model="ir.ui.view">
        <field name="name">product_uom__specific_tree_view</field>
        <field name="model">product.uom</field>
        <field name="inherit_id" ref="product.product_uom_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_type']" position="after">
                <field name="recurring" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
