<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_specific_bso_view_form" model="ir.ui.view">
        <field name="name">product_template_specific_bso_view_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="bso_spec" string="BSO">
                    <group name="info">
                        <field name="mrc"/>
                        <field name="is_epl"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_recurring_from" model="ir.ui.view">
      <field name="name">product_template_recurring_form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='uom_id']" position="attributes">
          <attribute name='domain'>[('recurring', '=', recurring_invoice)]</attribute>
        </xpath>
      </field>
    </record>

</odoo>
