<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="bso_company_view_form" model="ir.ui.view">
        <field name="name">bso_company_view_form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="bso_network" string="Network">
                    <group>
                        <field name="network_api_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>