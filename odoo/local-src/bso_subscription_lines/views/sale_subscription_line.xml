<odoo>
    <record id="sale_subscription_line_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.line.form.view</field>
        <field name="model">sale.subscription.line</field>
        <field name="arch" type="xml">
            <form string="Subscription Line" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="analytic_account_id"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="quantity" groups="base.group_no_one"/>
                            <field name="actual_quantity"/>
                            <field name="sold_quantity"/>
                            <field name="uom_id" groups="product.group_uom"/>
                            <field name="price_unit"/>
                            <field name="discount"
                                   groups="sale.group_discount_per_so_line"/>
                            <field name="applied_tax_desc"/>
                            <field name="additional_tax_ids"
                                   widget="many2many_tags"/>
                            <field name="price_subtotal"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sale_subscription_line_view_tree" model="ir.ui.view">
        <field name="name">sale.subscription.line.list</field>
        <field name="model">sale.subscription.line</field>
        <field name="arch" type="xml">
            <tree string="Sale Subscription Lines" create="false">
                <field name="partner_id"/>
                <field name="analytic_account_id"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="quantity" readonly="1"
                       groups="base.group_no_one"/>
                <field name="actual_quantity"/>
                <field name="sold_quantity"/>
                <field name="uom_id" groups="product.group_uom"/>
                <field name="price_unit"/>
                <field name="discount"
                       groups="sale.group_discount_per_so_line"/>
                <field name="price_subtotal" sum="Total"/>
            </tree>
        </field>
    </record>
    <record id="sale_subscription_line_search" model="ir.ui.view">
        <field name="name">sale.subscription.line.search</field>
        <field name="model">sale.subscription.line</field>
        <field name="arch" type="xml">
            <search string="Subscription Templates">
                <field name="name" filter_domain="[('name','ilike',self)]"
                       string="Name"/>
                <field name="product_id"/>
                <group string="Group By" name="groupby">
                    <filter name="partner_id" string="Customer"
                            context="{'group_by': 'partner_id'}"/>
                    <filter name="analytic_account_id" string="Subscription"
                            context="{'group_by': 'analytic_account_id'}"/>
                    <filter name="product_id" string="Product"
                            context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="sale_subscription_line_action" model="ir.actions.act_window">
        <field name="name">Subscription Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.subscription.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="sale_subscription_line_action"
              id="menu_sale_subscription_line"
              parent="sale_contract.menu_sale_subscription"
              sequence="5"
              groups="sale_contract.group_sale_contract_view"/>

</odoo>