<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_docusign">
        <field name="name">Docusign</field>

    </record>

    <record id="group_allow_signing_by_docusign" model="res.groups">
        <field name="name">Allowed to countersign by Docusign</field>
        <field name="category_id" ref="module_category_docusign"/>
    </record>

    <record id="group_docusign_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_docusign"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

    <record id="group_docusign_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_docusign"/>
        <field name="implied_ids" eval="[(4, ref('group_docusign_user'))]"/>
    </record>

    <record id="group_docusign_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_docusign"/>
        <field name="implied_ids" eval="[(4, ref('group_docusign_officer'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

</odoo>
