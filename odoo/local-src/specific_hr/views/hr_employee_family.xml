<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_employee_family_form" model="ir.ui.view">
        <field name="name">hr.employee.family.form</field>
        <field name="model">hr.employee.family</field>
        <field name="arch" type="xml">
            <form string="Employee Families">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>
    <record id="view_employee_family_list" model="ir.ui.view">
        <field name="name">hr.employee.family.list</field>
        <field name="model">hr.employee.family</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Employee Families">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="open_view_employee_family_form" model="ir.actions.act_window">
        <field name="name">Employee Families</field>
        <field name="res_model">hr.employee.family</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="open_view_employee_family_form" id="menu_view_employee_family_form"
        parent="hr.menu_human_resources_configuration" sequence="1" />

</odoo>