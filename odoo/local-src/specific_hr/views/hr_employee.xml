<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">view_employee_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='manager']" position="after">
                <field name="family_id"/>
            </xpath>
            <xpath expr="//field[@name='job_id']" position="after">
                <field name="title"/>
                <field name="partial_time"/>
                <field name="partial_percent" attrs="{'invisible': [('partial_time', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="user_login"/>
            </xpath>
            <xpath expr="//button[@name='%(hr_contract.act_hr_employee_2_hr_contract)d']" position="attributes">
                <attribute name="groups">specific_hr.bso_hr_confidential</attribute>
            </xpath>
            <xpath expr="//field[@name='vehicle_distance']" position="after">
                <field name="seniority_days"/>
                <field name="per_month_legal_allocation"/>
            </xpath>
        </field>
    </record>

</odoo>