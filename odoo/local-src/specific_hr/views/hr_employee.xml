<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">view_employee_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='manager']" position="after">
                <field name="family_id"/>
            </xpath>
            <xpath expr="//field[@name='job_id']" position="after">
                <field name="title"/>
                <field name="partial_time"/>
                <field name="partial_percent" attrs="{'invisible': [('partial_time', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="user_login"/>
            </xpath>
            <xpath expr="//button[@name='%(hr_contract.act_hr_employee_2_hr_contract)d']" position="attributes">
                <attribute name="groups">specific_hr.bso_hr_confidential</attribute>
            </xpath>
            <xpath expr="//field[@name='vehicle_distance']" position="after">
                <field name="seniority_days"/>
                <field name="per_month_legal_allocation"/>
                <field name="per_month_rtt_allocation"/>
                <field name='crt_date_start'/>
            </xpath>
            <xpath expr="//field[@name='manager']" position="attributes">
                <attribute name="groups"></attribute>
            </xpath>
        </field>
    </record>

    <record id="hr_kanban_view_employees_job_title" model="ir.ui.view">
        <field name="name">hr.employee.kanban job title</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <li t-if="record.job_id.raw_value" position="attributes">
                <attribute name="invisible">1</attribute>
            </li>
            <li t-if="record.job_id.raw_value" position="after">
                <li t-if="record.title.raw_value"><field name="title"/></li>
            </li>
        </field>
    </record>

</odoo>
