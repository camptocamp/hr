<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_user_expensify_form_preference" model="ir.ui.view">
        <field name="name">view_user_expensify_form_preference</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//group[field[@name='email']]" position="before">
                <group name="expensify" string="Expensify">
                    <field name="expensify_id"/>
                    <field name="expensify_secret" password="True"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_user_expensify_form" model="ir.ui.view">
        <field name="name">view_user_expensify_form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="expensify" string="Expensify">
                    <group>
                        <field name="expensify_id"/>
                        <field name="expensify_secret" password="True"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>