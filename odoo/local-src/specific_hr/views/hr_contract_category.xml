<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_contract_category_form" model="ir.ui.view">
        <field name="name">hr.contract.category.form</field>
        <field name="model">hr.contract.category</field>
        <field name="arch" type="xml">
            <form string="Contract Categories">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>
    <record id="view_contract_category_list" model="ir.ui.view">
        <field name="name">hr.contract.category.list</field>
        <field name="model">hr.contract.category</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Contract Categories">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="open_view_contract_category_form" model="ir.actions.act_window">
        <field name="name">Contract Categories</field>
        <field name="res_model">hr.contract.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="open_view_contract_category_form" id="menu_view_contract_category_form"
        parent="hr.menu_human_resources_configuration" sequence="1" />

</odoo>