<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
<template id="report_invoice_document"
          inherit_id="account.report_invoice_document">
  <xpath expr="//div[@t-if='len(o.tax_line_ids) > 0']//thead/tr"
         position="inside">
    <th t-if="o.currency_id.id != o.company_id.currency_id.id">Converted</th>
  </xpath>
    <xpath expr="//div[@t-if='len(o.tax_line_ids) > 0']//tbody/tr"
           position="inside">
      <td t-if="o.currency_id.id != o.company_id.currency_id.id">
        <span t-field="t.amount_currency"
              t-options='{"widget": "monetary", "display_currency":
                         t.company_currency_id}'/> @rate
        <span t-field="t.exchange_rate"/>
      </td>
    </xpath>
</template>
  </data>
</odoo>
