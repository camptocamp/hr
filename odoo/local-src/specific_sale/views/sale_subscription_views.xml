<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="sale_subscription_view_form" model="ir.ui.view">
    <field name="name">sale.subscription.amount.form</field>
    <field name="inherit_id" ref="sale_contract.sale_subscription_view_form"/>
    <field name="model">sale.subscription</field>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='recurring_total']" position="after">
        <field name="period_total" class="oe_subtotal_footer_separator"
               widget="monetary" options="{'currency_field': 'currency_id'}"/>
      </xpath>
      <field name="template_id" position="after">
        <label for="recurring_interval" string="Recurrency"/>
        <div>
          <field name="recurring_interval" class="oe_inline"/>
          <field name="recurring_rule_type" class="oe_inline"/>
        </div>
      </field>
      <xpath expr="//field[@name='date']" position="after">
        <field name="duration" string="Initial duration"/>
        <field name="automatic_renewal"/>
        <field name="customer_prior_notice"/>
        <field name="date_cancelled"/>
      </xpath>
      <xpath expr="//label[@for='recurring_next_date']" position="before">
          <field name="date_next_invoice_period_start"/>
      </xpath>
      <xpath expr="//header/button[contains(@context, 'cancel')]" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
    </field>
  </record>

  <record id="sale_subscription_view_list" model="ir.ui.view">
    <field name="name">sale.subscription.amount.list</field>
    <field name="inherit_id" ref="sale_contract.sale_subscription_view_list"/>
    <field name="model">sale.subscription</field>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='recurring_total']" position="after">
        <field name="period_total"/>
      </xpath>

    </field>
  </record>

  <record id="sale_subscription_template_view_form_bso" model="ir.ui.view">
    <field name="name">sale.subscription.template.form.viewbso</field>
    <field name="model">sale.subscription.template</field>
    <field name="inherit_id" ref="sale_contract.sale_subscription_template_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='journal_id']" position="before">
        <field name="automatic_renewal"/>
        <field name="customer_prior_notice"/>
      </xpath>
    </field>
  </record>

</odoo>
