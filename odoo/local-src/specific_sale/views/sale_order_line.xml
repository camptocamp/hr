<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_order_line_subscripiton_form" model="ir.ui.view">
    <field name="name">sale.order.line.subscription.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//tree/field[@name='qty_delivered']" position="replace">
        <field name='qty_delivered_calculated'/>
      </xpath>
    </field>
  </record>

  <record id="sale_margin_sale_order_line_tree" model="ir.ui.view">
    <field name="name">sale.order.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale_line_cost_control.sale_margin_sale_order_line_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//button" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
    </field>
  </record>
</odoo>
