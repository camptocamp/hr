<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- show the button approve only to technical manager -->
    <record id="view_order_form_approve_button" model="ir.ui.view">
      <field name="name">sale.order.form.approve.button</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale_double_validation.view_order_form"/>
      <field name="arch" type="xml">
        <button name="action_approve" position="attributes">
          <attribute name="groups">specific_security.group_technical_mgmt</attribute>
          <attribute name="states">to_approve_tech</attribute>
          <attribute name="string">Approve Order (Technical)</attribute>
        </button>
      </field>
    </record>

    <!-- hide button Send By Email and display Confirm button as primary -->
    <record id="view_order_form_confirm_buttons" model="ir.ui.view">
      <field name="name">sale.order.form.confirm.buttons</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">

        <xpath expr="//button[@name='action_quotation_send' and @states='draft']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//button[@name='action_confirm' and @states='draft']" position="attributes">
          <attribute name="class">btn-primary</attribute>
        </xpath>
        <xpath expr="//button[@name='action_confirm' and @states='draft']" position="after">
          <button name="action_confirm" states="to_approve" string="Approve Order" class="btn-primary" type="object" context="{'show_sale': True}"
            groups="sales_team.group_sale_manager"
            />
        </xpath>
        <button name="action_cancel" position="after">
          <button name="action_draft" states="refused" type="object" string="Set to Quotation"/>
          <button name="%(specific_sale.action_view_sale_refusal)d" states="to_approve" string="Refuse" type="action"
            context="{'default_order_id': active_id}"
            groups="sales_team.group_sale_manager,specific_security.group_technical_mgmt" />
          <button name="%(specific_sale.action_view_sale_refusal)d" states="to_approve_tech" string="Refuse" type="action"
            context="{'default_order_id': active_id}"
            groups="specific_security.group_technical_mgmt" />
        </button>

      </field>
    </record>

    <record id="view_order_form_mrp_invoicing" model="ir.ui.view">
      <field name="name">sale.order.form.mrp_invoicing</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_done']" position="after">
          <button name="action_invoicing" string="Go invoicing" class="btn-primary" type="object"/>
        </xpath>
        <!-- Yes twice the same expression, because there is two create invoice button to change -->
        <xpath expr="(//button[@name='%(sale.action_view_sale_advance_payment_inv)d' and @type='action'])" position="attributes">
          <attribute name="name">action_invoicing</attribute>
          <attribute name="type">object</attribute>
        </xpath>
        <xpath expr="(//button[@name='%(sale.action_view_sale_advance_payment_inv)d' and @type='action'])" position="attributes">
          <attribute name="name">action_invoicing</attribute>
          <attribute name="type">object</attribute>
        </xpath>
      </field>
    </record>

</odoo>
