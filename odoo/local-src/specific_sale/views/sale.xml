<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_order_form_approve_button" model="ir.ui.view">
      <field name="name">sale.order.form.approve.button</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale_double_validation.view_order_form"/>
      <field name="arch" type="xml">
        <button name="action_approve" position="attributes">
          <attribute name="groups">specific_security.group_technical_mgmt</attribute>
        </button>
      </field>
    </record>

    <record id="view_order_form_confirm_buttons" model="ir.ui.view">
      <field name="name">sale.order.form.confirm.buttons</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">

        <xpath expr="//button[@name='action_confirm' and @states='sent']" position="attributes">
          <attribute name="groups">base.group_sale_manager</attribute>
        </xpath>
        <xpath expr="//button[@name='action_confirm' and @states='draft']" position="attributes">
          <attribute name="groups">base.group_sale_manager</attribute>
        </xpath>

      </field>
    </record>
  </data>
</openerp>

