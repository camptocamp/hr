<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="constraints_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.constraints</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id"
               ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="before">
                <field name="validate_ok" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='approve_expense_sheets']"
                   position="attributes">
                <attribute name="states"/>
                <attribute name="attrs">
                    {'invisible': [
                    '|',
                    ('state', 'not in', ('submit')),
                    ('validate_ok', '=', False)
                    ]}
                </attribute>
            </xpath>

            <xpath expr="//button[@name='%(hr_expense.hr_expense_refuse_wizard_action)d' and @states='submit']"
                   position="attributes">
                <attribute name="states"/>
                <attribute name="attrs">
                    {'invisible': [
                    '|',
                    ('state', 'not in', ('submit')),
                    ('validate_ok', '=', False)
                    ]}
                </attribute>
            </xpath>

            <xpath expr="//button[@name='%(hr_expense.hr_expense_refuse_wizard_action)d' and @states='approve']"
                   position="attributes">
                <attribute name="states"/>
                <attribute name="attrs">
                    {'invisible': [
                    '|',
                    ('state', 'not in', ('approve')),
                    ('validate_ok', '=', False)
                    ]}
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>
