<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <data noupdate="1">

        <record model="ir.rule" id="hr_employee_rule_bso">
            <field name="active" eval="1" />
            <field name="domain_force">['|','|',('company_id','=',False),('company_id','in',user.company_ids.ids),('id', 'child_of', user.employee_ids.ids)]</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="name">Employees</field>
            <field name="perm_read" eval="0" />
            <field name="perm_write" eval="0" />
            <field name="perm_create" eval="1" />
            <field name="perm_unlink" eval="1" />
        </record>

        <record model="ir.rule" id="hr_employee_rule_bso2">
            <field name="active" eval="1" />
            <field name="domain_force">['|','|','|',('company_id','=',False),('company_id','in',user.company_ids.ids),('id', 'child_of', user.employee_ids.ids),('id', '=',  user.employee_ids.parent_id.id)]</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="name">Employees</field>
            <field name="perm_read" eval="0" />
            <field name="perm_write" eval="1" />
            <field name="perm_create" eval="0" />
            <field name="perm_unlink" eval="0" />
        </record>

        <record model="ir.rule" id="project_comp_rule_read">
            <field name="name">Project: multi-company Read</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record model="ir.rule" id="analytic_comp_rule_read">
            <field name="name">Analytic account: multi-company Read</field>
            <field name="model_id" ref="analytic.model_account_analytic_account"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="calendar_event_rule_employee_create_read" model="ir.rule">
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="name">Calendar Event for employees only create/read</field>
            <field name="domain_force">[(1,'=',1)]</field>
            <field eval="[(4,ref('base.group_user'))]" name="groups"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="calendar_event_rule_employee_own" model="ir.rule">
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="name">Own Calendar Event for employees</field>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
            <field eval="[(4,ref('base.group_user'))]" name="groups"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="calendar_event_rule_employee_officer" model="ir.rule">
            <field ref="calendar.model_calendar_event" name="model_id"/>
            <field name="name">All Calendar Event for Officers</field>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field eval="[(4,ref('hr_holidays.group_hr_holidays_user'))]" name="groups"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
