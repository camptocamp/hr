<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ubersmith_service_plan_form" model="ir.ui.view">
        <field name="name">ubersmith.service.plan.form</field>
        <field name="model">ubersmith.service.plan</field>
        <field name="arch" type="xml">
            <form string="Ubersmith Service Plans" create="false">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="plan_id" readonly="True"/>
                        <field name="code" readonly="True"/>
                        <field name="odoo_product_id"/>
                        <field name="title" readonly="True"/>
                        <field name="category" readonly="True"/>
                        <field name="brand_id" readonly="True"/>
                    </group>
                    <group>
                        <field name="period" readonly="True"/>
                        <field name="bill_type" readonly="True"/>
                        <field name="post_renew" readonly="True"/>
                        <field name="bill_prior" readonly="True"/>
                    </group>
                    <group>
                        <field name="quantity" readonly="True"/>
                        <field name="price" readonly="True"/>
                        <field name="cost" readonly="True"/>
                        <field name="state" readonly="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ubersmith_service_plan_tree" model="ir.ui.view">
        <field name="name">ubersmith.service.plan.tree</field>
        <field name="model">ubersmith.service.plan</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="plan_id"/>
                <field name="code"/>
                <field name="odoo_product_id"/>
                <field name="brand_id"/>
                <field name="title"/>
                <field name="category"/>
                <field name="period"/>
                <field name="bill_type"/>
                <field name="post_renew"/>
                <field name="bill_prior"/>
                <field name="quantity"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="ubersmith_service_plan_action" model="ir.actions.act_window">
        <field name="name">Service Plans</field>
        <field name="res_model">ubersmith.service.plan</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
