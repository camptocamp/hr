<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ubersmith_invoice_form" model="ir.ui.view">
        <field name="name">ubersmith.invoice.form</field>
        <field name="model">ubersmith.invoice</field>
        <field name="arch" type="xml">
            <form string="Ubersmith Invoices" create="false">
                <header>
                    <button string="Create Invoice" type="object"
                            name="create_invoice"/>
                </header>
                <sheet>
                    <group>
                        <field name="invoice_id" readonly="True"/>
                        <field name="odoo_invoice_id" readonly="True"/>
                        <field name="client_id" readonly="True"/>
                        <field name="date" readonly="True"/>
                        <field name="datepaid" readonly="True"/>
                        <field name="due" readonly="True"/>
                        <field name="non_creation_reason" readonly="True"/>
                        <field name="is_correctly_imported" readonly="True"/>
                        <field name="total_current_charges" readonly="True"/>
                        <field name="current_charges" readonly="True"/>
                        <field name="paid" readonly="True"/>
                    </group>
                    <notebook>
                        <page>
                            <field name="ubersmith_invoice_line_ids"
                                   readonly="True"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ubersmith_invoice_tree" model="ir.ui.view">
        <field name="name">ubersmith.invoice.tree</field>
        <field name="model">ubersmith.invoice</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="invoice_id"/>
                <field name="odoo_invoice_id"/>
                <field name="client_id"/>
                <field name="date"/>
                <field name="datepaid"/>
                <field name="due"/>
                <field name="non_creation_reason"/>
                <field name="is_correctly_imported"/>
                <field name="paid"/>
            </tree>
        </field>
    </record>

    <record id="ubersmith_invoice_action" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">ubersmith.invoice</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
