<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ubersmith_contract_term_form" model="ir.ui.view">
        <field name="name">ubersmith.contract.term.form</field>
        <field name="model">ubersmith.contract.term</field>
        <field name="arch" type="xml">
            <form string="Ubersmith Contract Terms" create="false">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="contract_term_id" readonly="True"/>
                        <field name="name" readonly="True"/>
                        <field name="status" readonly="True"/>
                        <field name="term" readonly="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ubersmith_contract_term_tree" model="ir.ui.view">
        <field name="name">ubersmith.contract.term.tree</field>
        <field name="model">ubersmith.contract.term</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="contract_term_id"/>
                <field name="name"/>
                <field name="status"/>
                <field name="term"/>
            </tree>
        </field>
    </record>

    <record id="ubersmith_contract_term_action" model="ir.actions.act_window">
        <field name="name">Contract Terms</field>
        <field name="res_model">ubersmith.contract.term</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
