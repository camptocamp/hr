<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ubersmith_invoice_line_form" model="ir.ui.view">
        <field name="name">ubersmith.invoice.line.form</field>
        <field name="model">ubersmith.invoice.line</field>
        <field name="arch" type="xml">
            <form string="Ubersmith Invoice Lines" create="false">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="plan_id" readonly="True"/>
                        <field name="description" readonly="True"/>
                        <field name="quantity" readonly="True"/>
                        <field name="unit_price" readonly="True"/>
                        <field name="cost" readonly="True"/>
                        <field name="value" readonly="True"/>
                        <field name="discount" readonly="True"/>
                        <field name="date_start" readonly="True"/>
                        <field name="date_end" readonly="True"/>
                        <field name="period" readonly="True"/>
                        <field name="tax_ids" readonly="True"/>
                        <field name="service_id" readonly="True"/>
                        <field name="bill_type" readonly="True"/>
                        <field name="is_correctly_imported" readonly="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ubersmith_invoice_line_tree" model="ir.ui.view">
        <field name="name">ubersmith.invoice.line.tree</field>
        <field name="model">ubersmith.invoice.line</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="plan_id"/>
                <field name="description"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="cost"/>
                <field name="value"/>
                <field name="discount"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="period"/>
                <field name="tax_ids"/>
                <field name="service_id"/>
                <field name="bill_type"/>
                <field name="is_correctly_imported" readonly="True"/>
            </tree>
        </field>
    </record>

    <record id="ubersmith_invoice_line_action" model="ir.actions.act_window">
        <field name="name">Invoice Line</field>
        <field name="res_model">ubersmith.invoice.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
