<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_bso_mailchimp">
        <field name="name">Mailchimp</field>

    </record>

    <record id="group_mailchimp_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_bso_mailchimp"/>
    </record>

    <record id="group_mailchimp_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_bso_mailchimp"/>
        <field name="implied_ids"
               eval="[(4, ref('bso_mailchimp.group_mailchimp_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>

    </record>


</odoo>

