<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_category_form_view_bso" model="ir.ui.view">
        <field name="name">product.category.terms</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='removal_strategy_id']" position="after">
                <field name="terms_title" />
                <field name="terms_text" />
            </xpath>
        </field>
    </record>
</odoo>