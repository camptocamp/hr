<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_field_total_nrc_mrc" model="ir.ui.view">
        <field name="name">sale.order.field.description</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed']" position="after">
                <field name="amount_nrc" invisible="True"/>
                <field name="amount_mrc" invisible="True"/>
            </xpath>
            <xpath expr="//group[@name='technical']" position="after">
                <group>
                    <field name="product_category_id"/>
                    <field name="estimated_delivery_date"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>