<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dealsheet_wizard_request" model="ir.ui.view">
        <field name="name">Dealsheet Wizard Request</field>
        <field name="model">sale.dealsheet.wizard.request</field>
        <field name="arch" type="xml">
            <form string="Select Pre-Sale">
                <group>
                    <field name="dealsheet_id" invisible="1"/>
                    <field name="presale_id" required="1"/>
                </group>
                <footer>
                    <button name="action_requested"
                            string="Request" type="object"
                            class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel"
                            class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>