<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dealsheet_form" model="ir.ui.view">
        <field name="name">sale.dealsheet.form</field>
        <field name="model">sale.dealsheet</field>
        <field name="arch" type="xml">
            <form string="Dealsheet">
                <header>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            states="draft"
                            class="oe_highlight"
                            groups="bso_dealsheet.group_dealsheet_manager"/>
                    <button name="action_validate"
                            string="Validate"
                            type="object"
                            states="confirmed"
                            class="oe_highlight"
                            groups="bso_dealsheet.group_dealsheet_role_reviewer"/>
                    <button name="action_refuse"
                            string="Refuse"
                            type="object"
                            states="confirmed"
                            groups="bso_dealsheet.group_dealsheet_role_reviewer"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,validated"/>
                    <field name="name" invisible="1"/>
                    <field name="presale_id" invisible="1"/>
                    <field name="reviewer_id" invisible="1"/>
                    <field name="validated_date" invisible="1"/>
                    <field name="refused_date" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object">
                            <field name="attachment_number" widget="statinfo"
                                   string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <field name="sale_order_id"/>
                        <field name="sale_order_state" invisible="1"/>
                        <field name="project_id" invisible="1"/>
                        <field name="partner_id"/>
                        <field name="seller_id"/>
                        <field name="duration"/>
                        <field name="currency_id"/>
                        <field name="compute_lines" invisible="1"/>
                    </group>
                    <group>
                        <field name="mrc_lines"/>
                    </group>
                    <group>
                        <field name="nrc_lines"/>
                    </group>
                    <group>
                        <group>
                            <field name="nrc" invisible="1"/>
                            <field name="nrc_delivery" invisible="1"/>
                            <field name="nrr" invisible="1"/>
                            <field name="nrm" invisible="1"/>
                            <field name="nrm_delivery" invisible="1"/>
                            <field name="mrc" invisible="1"/>
                            <field name="mrc_delivery" invisible="1"/>
                            <field name="mrr" invisible="1"/>
                            <field name="mrm" invisible="1"/>
                            <field name="mrm_delivery" invisible="1"/>
                            <field name="cost" invisible="1"/>
                            <field name="cost_delivery" invisible="1"/>
                            <field name="revenue" invisible="1"/>
                            <field name="margin" invisible="1"/>
                            <field name="margin_delivery" invisible="1"/>
                            <field name="summary"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="dealsheet_tree" model="ir.ui.view">
        <field name="name">sale.dealsheet.tree</field>
        <field name="model">sale.dealsheet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" invisible="1"/>
                <field name="sale_order_id"/>
                <field name="sale_order_state" invisible="1"/>
                <field name="create_date"/>
                <field name="validated_date"/>
                <field name="refused_date"/>
                <field name="project_id" invisible="1"/>
                <field name="partner_id"/>
                <field name="seller_id"/>
                <field name="presale_id"/>
                <field name="reviewer_id"/>
                <field name="duration"/>
                <field name="currency_id" invisible="1"/>
                <field name="compute_lines" invisible="1"/>
                <field name="mrc_lines" invisible="1"/>
                <field name="nrc_lines" invisible="1"/>
                <field name="nrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       invisible="1"/>
                <field name="nrc_delivery" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       invisible="1"/>
                <field name="nrr" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       invisible="1"/>
                <field name="nrm" invisible="1"/>
                <field name="nrm_delivery" invisible="1"/>
                <field name="mrc" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       invisible="1"/>
                <field name="mrc_delivery" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       invisible="1"/>
                <field name="mrr" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       invisible="1"/>
                <field name="mrm" invisible="1"/>
                <field name="mrm_delivery" invisible="1"/>
                <field name="cost" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="cost_delivery" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       invisible="1"/>
                <field name="revenue" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="margin"/>
                <field name="margin_delivery" invisible="1"/>
                <field name="state"/>
                <field name="attachment_number" invisible="True"/>
                <button name="action_get_attachment_view"
                        string="View Attached Documents" type="object"
                        icon="fa-paperclip"
                        attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <record id="dealsheet_action" model="ir.actions.act_window">
        <field name="name">Dealsheets</field>
        <field name="res_model">sale.dealsheet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="dealsheet_menu" name="Dealsheets"
              action="dealsheet_action"
              parent=""
              web_icon="bso_dealsheet,static/description/icon.png"
              groups="bso_dealsheet.group_dealsheet_user"/>

</odoo>