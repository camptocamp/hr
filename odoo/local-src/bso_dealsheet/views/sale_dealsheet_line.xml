<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_dealsheet_line_tree" model="ir.ui.view">
        <field name="name">sale.dealsheet.line.tree</field>
        <field name="model">sale.dealsheet.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="dealsheet_id" invisible="1"/>
                <field name="dealsheet_state" invisible="1"/>
                <field name="sale_order_state" invisible="1"/>
                <field name="is_locked" invisible="1"/>
                <field name="is_cost" invisible="1"/>
                <field name="is_recurring" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="sale_order_line_id" invisible="1"/>
                <field name="product_id"
                       attrs="{'readonly': [('is_locked', '=', True)]}"
                       domain="[('recurring_invoice', '=', is_recurring), '|', ('sale_ok', '=', True), ('purchase_ok', '=', True)]"/>
                <field name="description"
                       attrs="{'readonly': [('is_locked', '=', True)]}"/>
                <field name="quantity"
                       attrs="{'readonly': [('is_locked', '=', True)]}"/>
                <field name="uom_id"/>
            </tree>
        </field>
    </record>

    <record id="sale_dealsheet_line_tree_group_manager" model="ir.ui.view">
        <field name="name">sale.dealsheet.line.tree.group_manager</field>
        <field name="model">sale.dealsheet.line</field>
        <field name="inherit_id" ref="bso_dealsheet.sale_dealsheet_line_tree"/>
        <field name="groups_id"
               eval="[(6, 0, [ref('bso_dealsheet.group_dealsheet_manager')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">
                    sale_order_state in ('sale', 'done')
                    and supplier_id != False
                    and purchase_order_state != 'purchase'
                </attribute>
            </xpath>
            <field name="uom_id" position="after">
                <field name="cost"
                       attrs="{'readonly': [('dealsheet_state', 'in', ('validated', 'refused'))]}"/>
                <field name="total_cost"/>
                <field name="supplier_id"
                       domain="[('supplier', '=', True), ('parent_id', '=', False)]"
                       attrs="{'readonly': [('purchase_order_line_id', '!=', False)]}"/>
                <field name="frequency"
                       attrs="{'required': [('supplier_id', '!=', False), ('is_recurring', '=', True)], 'readonly': ['|', ('is_recurring', '=', False), ('purchase_order_line_id', '!=', False)]}"/>
                <field name="cost_delivery" attrs="{'readonly': True}"/>
                <field name="total_cost_delivery"/>
                <field name="purchase_order_line_id" invisible="1"/>
                <field name="purchase_order_id" invisible="1"/>
                <field name="purchase_order_state" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="sale_dealsheet_line_tree_group_delivery" model="ir.ui.view">
        <field name="name">sale.dealsheet.line.tree.group_delivery</field>
        <field name="model">sale.dealsheet.line</field>
        <field name="inherit_id"
               ref="bso_dealsheet.sale_dealsheet_line_tree_group_manager"/>
        <field name="groups_id"
               eval="[(6, 0, [ref('bso_dealsheet.group_dealsheet_role_delivery')])]"/>
        <field name="arch" type="xml">
            <field name="cost_delivery" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('dealsheet_state', 'not in',
                    ('validated'))]}
                </attribute>
            </field>
        </field>
    </record>

    <record id="sale_dealsheet_line_form" model="ir.ui.view">
        <field name="name">sale.dealsheet.line.form</field>
        <field name="model">sale.dealsheet.line</field>
        <field name="arch" type="xml">
            <form string="Dealsheet Line">
                <group>
                    <field name="dealsheet_id" invisible="1"/>
                    <field name="dealsheet_state" invisible="1"/>
                    <field name="is_locked" invisible="1"/>
                    <field name="is_cost" invisible="1"/>
                    <field name="is_recurring" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="sale_order_line_id" invisible="1"/>
                    <field name="product_id" readonly="1"/>
                    <field name="description" readonly="1"/>
                    <field name="quantity" readonly="1"/>
                    <field name="uom_id" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="sale_dealsheet_line_form_group_manager" model="ir.ui.view">
        <field name="name">sale.dealsheet.line.form.group_manager</field>
        <field name="model">sale.dealsheet.line</field>
        <field name="inherit_id" ref="bso_dealsheet.sale_dealsheet_line_form"/>
        <field name="groups_id"
               eval="[(6, 0, [ref('bso_dealsheet.group_dealsheet_manager')])]"/>
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field name="cost" readonly="1"/>
                <field name="total_cost" readonly="1"/>
                <field name="supplier_id" readonly="1"/>
                <field name="frequency" readonly="1"/>
                <field name="cost_delivery" readonly="1"/>
                <field name="total_cost_delivery" readonly="1"/>
                <field name="purchase_order_line_id" readonly="1"/>
                <field name="purchase_order_id" readonly="1"/>
            </field>
        </field>
    </record>

</odoo>