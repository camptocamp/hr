<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dealsheet_wizard_confirm" model="ir.ui.view">
        <field name="name">Dealsheet Wizard Confirm</field>
        <field name="model">sale.dealsheet.wizard.confirm</field>
        <field name="arch" type="xml">
            <form string="Select Reviewer">
                <group>
                    <field name="dealsheet_id" invisible="1"/>
                    <field name="reviewer_id" required="1"/>
                </group>
                <footer>
                    <button name="action_confirmed"
                            string="Confirm" type="object"
                            class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel"
                            class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>