<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_subscription_view_form_bso" model="ir.ui.view">
        <field name="name">sale.subscription.form.view.bso</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id"
               ref="sale_contract.sale_subscription_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_id']"
                   position="attributes">
                <attribute name="options">
                    {'create': False, 'create_edit': False}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='analytic_account_id']"
                   position="attributes">
                <attribute name="options">
                    {'create': False, 'create_edit': False}
                </attribute>
            </xpath>

        </field>
    </record>

</odoo>
