<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_bso" model="ir.ui.view">
        <field name="name">purchase.order.form.bso</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']"
                   position="attributes">
                <attribute name="options">
                    {'create': False, 'create_edit': False}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='account_analytic_id']"
                   position="attributes">
                <attribute name="options">
                    {'create': False, 'create_edit': False}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='product_id']"
                   position="attributes">
                <attribute name="options">
                    {'create': False, 'create_edit': False}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='account_analytic_id']"
                   position="attributes">
                <attribute name="options">
                    {'create': False, 'create_edit': False}
                </attribute>
            </xpath>

        </field>
    </record>

</odoo>
