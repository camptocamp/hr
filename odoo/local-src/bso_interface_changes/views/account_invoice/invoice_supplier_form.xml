<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_supplier_form_bso" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form.bso</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']//field[@name='account_analytic_id']"
                   position="attributes">
                <attribute name="domain"/>
                <attribute name="options">
                    {'create': False, 'create_edit': False}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='tax_line_ids']//field[@name='account_analytic_id']"
                   position="attributes">
                <attribute name="domain"/>
                <attribute name="options">
                    {'create': False, 'create_edit': False}
                </attribute>
            </xpath>

        </field>
    </record>

</odoo>
