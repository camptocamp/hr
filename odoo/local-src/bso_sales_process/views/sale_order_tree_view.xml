<odoo>
    <record id="sale_order_tree_order_type" model="ir.ui.view">
        <field name="name">sale.order.tree.order.type</field>
        <field name="model">sale.order</field>
        <field name="inherit_id"
               ref="website_contract.sale_order_view_tree_subscription"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subscription_management']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="order_type"/>
            </xpath>
        </field>
    </record>
</odoo>